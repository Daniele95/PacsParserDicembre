<Window x:Class="Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Explorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame x:Name="frame" Content="Frame" HorizontalAlignment="Left" Height="410" Margin="108,0,0,0" VerticalAlignment="Top" Width="674" Grid.RowSpan="2"/>
        <StackPanel HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="100" Background="Gray" Grid.RowSpan="2">
            <Button x:Name="queryButton" Content="Query" Click="queryClick"/>
            <Button x:Name="downloadButton" Content="Download" Click="downloadClick"/>
        </StackPanel>
        <Button x:Name="button" Content="Search" HorizontalAlignment="Left" Margin="463,30,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="22" Click="onSearchButtonClicked"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="252,29,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
